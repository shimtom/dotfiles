[include]
  # A local gitconfig, outside of version control.
  # If the file doesn't exist it is silently ignored
  path = ~/.gitconfig_local
[core]
  autocrlf = input
  # Make `git rebase` safer on macOS
  # More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
  trustctime = false
[init]
  defaultBranch = main
[commit]
  template = $XDG_CONFIG_HOME/.config/git/message
[merge]
  conflictstyle = diff3
  ff = false
[pull]
  ff = only
[diff]
  colorMoved = dimmed-zebra
[alias]
  graph = log --graph --date-order --all --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
  undo = reset --soft HEAD~1
  amend = commit -a --amend
  delete = !"f(){ git filter-branch --tree-filter \"rm -f -r ${@}\" HEAD; git gc --aggressive --prune=now; };f"
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[interactive]
  diffFilter = delta --color-only --features=interactive
[delta]
  line-numbers = true
  side-by-side = true
  navigate = true
[color]
  ui = true
[color "branch"]
  current = blue
  remote = red
[color "diff"]
  commit = yellow
  meta = yellow
  frag = bold cyan
  func = bold
  whitespace = reverse red
  old = red
  new = green
[color "status"]
  added = bold
  changed = yellow
  untracked = green
  branch = blue
