# ~/.profile: executed by the command interpreter for login shells.
# This file is used by bash, zsh and fish shell in common.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
umask 022

# Environmental Variables
# PATH
# enable /usr/local/sbin
if [[ ":$PATH:" != *":/usr/local/sbin:"* ]]; then
    export PATH="/usr/local/sbin:$PATH"
fi
# enable $HOME/.local/bin
if [[ ":$PATH:" != *":$HOME/.local/bin:"* ]]; then
    export PATH="$HOME/.local/bin:$PATH"
fi
# enable latex
if [ -e /usr/local/opt/texinfo/bin ] && [[ ":$PATH:" != *":/usr/local/opt/texinfo/bin:"* ]]; then
    export PATH="/usr/local/opt/texinfo/bin:$PATH"
fi

# XDG Base Directory
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"

# LANG
case $TERM in
    linux) export LANG=C ;;
    *)     locale -a | grep -q ja_JP.UTF-8 && export LANG=ja_JP.UTF-8 ;;
esac

# MANPAGER
if type "bat" > /dev/null 2>&1; then
    export MANPAGER="sh -c 'col -bx | bat -l man -p'"
fi

# Homebrew
if [ -e /opt/homebrew/bin/brew ]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
fi


# If running bash, include .bashrc if it exists
if [ -n "$BASH_VERSION" ] && [ -f "$HOME/.bashrc" ]; then
    source "$HOME/.bashrc"
fi

# Finish with 0
echo "" > /dev/null
