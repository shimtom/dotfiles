# .bashrc

# Source global definitions
if [ -f /etc/bash.bashrc ]; then
    . /etc/bash.bashrc
fi

# User specific aliases and functions
alias ls='ls --group-directories-first --color=auto'

if [ -f /usr/bin/zsh ]; then
    exec /usr/bin/zsh
fi

case $TERM in
    linux) export LANG=C ;;
    *)     export LANG=ja_JP.UTF-8 ;;
esac
